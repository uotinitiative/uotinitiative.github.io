{
  "extends": ["html-validate:recommended"],
  "rules": {
    "doctype-style": ["error", { "style": "lowercase" }],
    "void-style": ["error", { "style": "selfclosing" }],
    "attribute-boolean-style": ["error", { "style": "empty" }],
    "attribute-empty-style": "off",
    "unique-landmark": "off",
    "long-title": "off",
    "no-inline-style": "off"
  }
}
